<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/controller_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controller Activity"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_open_appointments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deschide programÄƒrile" />

    <Button
        android:id="@+id/btn_open_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autentificare"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_logout_circle"
        android:backgroundTint="@color/button_logout_colors"
        android:text="@string/logout"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp" />

</LinearLayout>